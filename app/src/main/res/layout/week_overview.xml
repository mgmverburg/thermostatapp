            android:id="@+id/field10"
            android:layout_below="@+id/field9"
            android:layout_marginTop="0dp"
            android:layout_toRightOf="@+id/switch9"
            android:layout_marginLeft="50dp"
            android:visibility="invisible" />


        <Switch
