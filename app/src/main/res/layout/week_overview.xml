            android:layout_height="wrap_content"
            android:text="State"
            android:id="@+id/state1"
            android:layout_toRightOf="@+id/field1"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="60dp"
            android:visibility="invisible"
            android:checked="false" />

